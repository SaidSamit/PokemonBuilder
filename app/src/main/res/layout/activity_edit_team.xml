<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/spacing_md"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/primary_blue"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTeamName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nombre del equipo"
                android:padding="@dimen/spacing_sm"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <GridLayout
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/slot0"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:contentDescription="Slot 0"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/slot1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:contentDescription="Slot 1"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/slot2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:contentDescription="Slot 2"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/slot3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:contentDescription="Slot 3"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/slot4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:contentDescription="Slot 4"
                android:adjustViewBounds="true" />

            <ImageButton
                android:id="@+id/slot5"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:contentDescription="Slot 5"
                android:adjustViewBounds="true" />

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveTeam"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/spacing_lg"
            android:text="Guardar equipo"
            android:textAllCaps="false"
            android:textColor="@color/on_primary"
            app:cornerRadius="@dimen/card_radius"
            app:backgroundTint="?attr/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteTeam"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:text="Eliminar equipo"
            android:textAllCaps="false"
            android:textColor="@color/on_primary"
            app:cornerRadius="@dimen/card_radius"
            app:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>
</ScrollView>
