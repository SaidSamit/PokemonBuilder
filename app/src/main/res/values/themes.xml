<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PokemonMinimal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Window background (usar android:windowBackground en lugar de colorBackground) -->
        <item name="android:windowBackground">@color/background_dark</item>

        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- App bar and system bars -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>

        <!-- Material components defaults -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Shape token para componentes pequeÃ±os -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!-- Shape token para cards y botones -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>
