<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal de la aplicaci칩n, basado en Material DayNight -->
    <style name="Theme.PokemonMinimal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface_dark</item>

        <!-- Fondo de la ventana -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Forzar texto blanco en toda la app -->
        <item name="colorOnSurface">@android:color/white</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Colores de la barra de estado y navegaci칩n -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>

        <!-- Estilos por defecto de componentes Material -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Token de forma para componentes peque침os (cards, botones) -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!-- Apariencia de esquinas para componentes peque침os -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>
